{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "pii": {
      "type": "object",
      "properties": {
        "tokenize": {
          "type": "string",
          "enum": ["sha256_tokenizer"]
        },
        "obfuscate": {
          "type": "string",
          "enum": ["email_obfuscator", "phone_obfuscator", "ip_obfuscator", "geo_obfuscator", "name_obfuscator", "null_obfuscator"]
        }
      },
      "oneOf": [
          {
            "required": [
                "tokenize"
            ]
        },
        {
            "required": [
                "obfuscate"
            ]
        }
      ],
      "additionalProperties": false
    }
  }
}